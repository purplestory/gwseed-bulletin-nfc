{
  "version": 2,
  "builds": [
    {
      "src": "nfc_redirect.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "nfc_redirect.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "functions": {
    "nfc_redirect.py": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/update-latest",
      "schedule": "0 9 * * 0"
    }
  ]
} 